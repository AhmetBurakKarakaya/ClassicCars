@model IEnumerable<ClassicCars.Data.Entities.Blog>

<!--Section Blog-1-->
@foreach (var item in Model)
{

<div class="wrapper">
    <section id="blog-card-1" class="section target center blog-card">
        <h2 class="section-heading">@item.Title</h2>
        <img class="section-blog-img" src=@item.Tumbnail   alt="car" style="height:30vh"/>
        <p class="section-blog">
            @if (item.Description.Length > 100)
            {
                @item.Description.Substring(0, 100);
            }else
            {
                @item.Description
            }

        </p>
        <a href="/Blog/BlogDetail/@item.Id"
                type="button"
                class="blog-btn">
            <span class="blog-btn-span"> See More </span>
        </a>
    </section>
</div>
}
<!--End of Section Blog-1-->

